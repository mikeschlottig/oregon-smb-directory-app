{
  "name": "oregon-smb-directory",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "./dev-remote.sh",
    "build": "tsc --project tsconfig.worker.json",
    "build:worker": "tsc --project tsconfig.worker.json",
    "type-check": "tsc --project tsconfig.worker.json --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:prod": "wrangler deploy --env production",
    "db:remote": "wrangler d1 execute oregon-smb-directory --remote",
    "db:local": "wrangler d1 execute oregon-smb-directory",
    "db:backup": "wrangler d1 export oregon-smb-directory --remote",
    "db:schema": "wrangler d1 execute oregon-smb-directory --file=schema.sql --remote",
    "types": "wrangler types"
  },
  "dependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "lucide-react": "^0.263.1",
    "next": "15.4.6",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1",
    "@cloudflare/workers-types": "^4.20250806.0",
    "@types/eslint": "^8",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "15.4.6",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.9.2",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
